# AVE CRM - Production Environment Configuration
# Copy this to .env and fill in the values

#------------------------------------------------------------------------------
# APPLICATION
#------------------------------------------------------------------------------
APP_NAME="AVE CRM"
APP_ENV=production
APP_KEY=base64:GENERATE_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://ave-crm.nl
APP_FEED_URL=https://ave-crm.nl
TENANT_DOMAIN_SUFFIX=ave-crm.nl

#------------------------------------------------------------------------------
# CORS (for API access)
#------------------------------------------------------------------------------
CORS_ALLOWED_ORIGIN=https://ave-crm.nl
CORS_PATTERN=https?://.*\.ave-crm\.nl

#------------------------------------------------------------------------------
# DATABASE (PostgreSQL - Forge fills these automatically)
#------------------------------------------------------------------------------
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=avecrm
DB_USERNAME=forge
DB_PASSWORD=YOUR_DATABASE_PASSWORD

#------------------------------------------------------------------------------
# CACHE & SESSIONS
#------------------------------------------------------------------------------
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_DOMAIN=.ave-crm.nl
QUEUE_CONNECTION=database

#------------------------------------------------------------------------------
# REDIS
#------------------------------------------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

#------------------------------------------------------------------------------
# CLOUDFLARE R2 (File Storage)
#------------------------------------------------------------------------------
FILESYSTEM_DISK=r2
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=ave-crm-files
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_REGION=auto

#------------------------------------------------------------------------------
# GOOGLE AI (Smart CV Import)
#------------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash

#------------------------------------------------------------------------------
# GOOGLE CLOUD (Bulk CV Import via Vertex AI)
#------------------------------------------------------------------------------
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_BUCKET=your-gcs-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=gcp-credentials.json
VERTEX_AI_LOCATION=europe-west4
VERTEX_AI_MODEL=gemini-2.0-flash-001

#------------------------------------------------------------------------------
# LOGGING
#------------------------------------------------------------------------------
LOG_CHANNEL=daily
LOG_LEVEL=warning
